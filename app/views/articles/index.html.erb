<div class="container">
	<h1>Articles</h1>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-responsive table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th style="min-width:200px;">Title</th>
						<th>Text</th>
					</tr>
				</thead>
				<tbody>
					<% @articles.each_with_index do |article, i| %>
					<tr>
						<th scope="row"><%= (i+1) %></th>
						<td><%= link_to article.title, article_path(article) %> &nbsp;<i><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_article_path(article) %></i></td>
						<td><%= article.text %></td>		
					</tr>
					<% end %>
				</tbody>
			</table>
			<button class="btn btn-default"><%= link_to 'Add New', new_article_path %></button>
		</div>
	</div>
</div>